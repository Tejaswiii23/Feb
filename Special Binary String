class Solution:
    def makeLargestSpecial(self, s: str) -> str:
        res = []
        count = 0
        start = 0
        for i, ch in enumerate(s):
            count += 1 if ch == '1' else -1
            if count == 0:
                inner = '1' + self.makeLargestSpecial(s[start+1:i]) + '0'
                res.append(inner)
                start = i + 1
        res.sort(reverse=True)
        return ''.join(res)
        
