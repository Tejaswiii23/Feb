class Solution:
    def constructTransformedArray(self, nums: List[int]) -> List[int]:
        n = len(nums)
        res = [0]*n
        for i in range(n):
            if nums[i] == 0:
                res[i] = 0
            else:
                steps = nums[i]
                new_i = (i + steps) % n
                res[i] = nums[new_i]
        return res
        
