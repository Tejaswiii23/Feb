class Solution:
    def longestBalanced(self, nums: List[int]) -> int:
        seen = {}
        seen[0] = -1
        even_set = set()
        odd_set = set()
        balance = 0
        ans = 0
        for i, x in enumerate(nums):
            if x % 2 == 0:
                if x not in even_set:
                    even_set.add(x)
                    balance += 1
            else:
                if x not in odd_set:
                    odd_set.add(x)
                    balance -= 1
            if balance in seen:
                ans = max(ans, i - seen[balance])
            else:
                seen[balance] = i
        return ans
        
